---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import getArticleImage from "@/utils/getArticleImage";

interface Props {
  slug: string;
}

const { slug } = Astro.props;

// 1. Fetch all blog posts
const allPosts = await getCollection("blog");

// 2. Find the current post to get its tags and category
const currentPost = allPosts.find((post) => post.id === slug);

if (!currentPost) {
  return null;
}

const { tags: currentTags, category: currentCategory } = currentPost.data;

// 3. Deterministic Shuffle Function (using slug as seed)
// This replaces "100% random" with "consistent randomness"
const getSeedScore = (postSlug: string) => {
  let hash = 0;
  for (let i = 0; i < postSlug.length; i++) {
    hash = (hash << 5) - hash + postSlug.charCodeAt(i);
    hash |= 0; // Convert to 32bit integer
  }
  return Math.abs(hash);
};

// 4. Filtering Logic
const otherPosts = allPosts.filter((post) => post.id !== slug);

// Pick up to 4 articles with common tags
const relatedByTag = otherPosts
  .filter((post) => post.data.tags.some((tag) => currentTags.includes(tag)))
  .sort((a, b) => (getSeedScore(a.id) % 100) - (getSeedScore(b.id) % 100))
  .slice(0, 4);

// Pick up to 2 articles with same category (excluding those already picked by tags)
const relatedByCategory = otherPosts
  .filter((post) => post.data.category === currentCategory)
  .filter((post) => !relatedByTag.some((p) => p.id === post.id))
  .sort((a, b) => (getSeedScore(a.id) % 100) - (getSeedScore(b.id) % 100))
  .slice(0, 2);

const finalRelatedPosts = [...relatedByTag, ...relatedByCategory];
---

<aside class="related-articles-container">
  <h2>関連記事</h2>
  {
    finalRelatedPosts.length > 0 ? (
      <ul class="related-list">
        {finalRelatedPosts.map((post) => (
          <li>
            <a href={`/blog/${post.id}/`}>
              <Image
                src={getArticleImage(post.id, post.data.thumbnail)}
                alt="Blog Thumbnail"
                class="blog-thumbnail"
                width={160}
                height={160}
              />
              <span class="title">{post.data.title}</span>
            </a>
          </li>
        ))}
      </ul>
    ) : (
      <p>関連記事はありません。</p>
    )
  }
</aside>

<style>
  .related-articles-container {
    max-width: 768px;
    margin: 2rem auto;
    padding: 0 1rem;
  }
  .related-list {
    list-style: none;
    padding: 0;
  }
  .related-list li a {
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: 16px;
    align-items: center; /* This centers the title vertically relative to the image */
    border: 1px solid var(--color-text-sub);
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: background 0.2s;
    height: 80px;
    overflow: hidden; /* Prevents text overflow from breaking the 80px height */
    margin: 10px 0;

    img {
      border-radius: 8px 0 0 8px;
      height: 80px; /* Force height to match parent */
      width: 120px;
      object-fit: cover;
    }

    @media (max-width: 400px) {
      grid-template-columns: 80px 1fr;
      img {
        width: 80px;
      }
    }
  }

  .title {
    font-weight: bold;
    font-size: 0.9rem;
    line-height: 1.3;
    padding-right: 8px; /* Give it some breathing room on the right */

    /* Handle long titles with ellipsis if they exceed the 80px container */
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
