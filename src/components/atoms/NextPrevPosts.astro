---
import { getCollection } from "astro:content";
import { Icon } from "astro-icon/components";

const { slug } = Astro.props;

const allPosts = await getCollection("blog");
const sortedPosts = allPosts.sort(
  (a, b) =>
    (b.data.lastUpdate?.valueOf() ?? b.data.date.valueOf()) -
    (a.data.lastUpdate?.valueOf() ?? a.data.date.valueOf()),
);

const currentIndex = sortedPosts.findIndex((post) => post.id === slug);
const prevPost = currentIndex > 0 ? sortedPosts[currentIndex - 1] : null;
const nextPost =
  currentIndex < sortedPosts.length - 1 ? sortedPosts[currentIndex + 1] : null;
---

<div class="article-navigation">
  {
    nextPost ? (
      <a href={`/blog/${nextPost.id}/`} class="nav-button prev">
        <Icon name="mdi:chevron-left" size="1.4em" />
        <div class="nav-content">
          <span>前の記事</span>
          <p>{nextPost.data.title}</p>
        </div>
      </a>
    ) : (
      <div class="spacer" />
    )
  }
  {
    prevPost ? (
      <a href={`/blog/${prevPost.id}/`} class="nav-button next">
        <div class="nav-content">
          <span>次の記事</span>
          <p>{prevPost.data.title}</p>
        </div>
        <Icon name="mdi:chevron-right" size="1.4em" />
      </a>
    ) : (
      <div class="spacer" />
    )
  }
</div>

<style>
  .article-navigation {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin: 40px auto;
    max-width: 800px;
    padding: 0 20px;
  }

  .nav-button {
    display: flex;
    align-items: center;
    padding: 16px;
    border: 1px solid var(--color-text-sub);
    border-radius: 12px;
    text-decoration: none;
    color: var(--color-text);
    transition:
      transform 0.2s ease,
      border-color 0.2s ease;
  }

  .nav-button:hover {
    transform: translateY(-3px);
    border-color: var(--color-primary);
  }

  .nav-content {
    display: grid;
  }

  .prev .nav-content {
    margin-left: 10px;
    text-align: left;
  }
  .next .nav-content {
    margin-right: 10px;
    text-align: right;
  }
  .next {
    justify-content: flex-end;
  }

  .nav-content span {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin-bottom: 4px;
  }

  .nav-content p {
    font-weight: bold;
    font-size: 0.95rem;
    margin: 0;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    word-break: break-all;
  }

  @media (max-width: 900px) {
    .article-navigation {
      grid-template-columns: 1fr;
    }
  }
</style>
