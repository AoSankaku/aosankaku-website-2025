---
import { Icon } from "astro-icon/components";
---

<footer>
  Copyright Â© 2025 Blue Triangle<br />
  Made with <a href="https://astro.build" target="_blank">Astro</a> and
  <Icon
    name="icon-park-twotone:triangle"
    color="var(--color-primary)"
    size="1.3em"
    class="footer-icon"
    id="rainbow-icon"
  />
</footer>

<script>
  const icon = document.getElementById("rainbow-icon");
  if (icon) {
    icon.addEventListener("click", () => {
      icon.classList.toggle("rainbow");
    });
  }
</script>

<style>
  footer {
    font-size: 12px;
    line-height: 2.1em;
    text-align: center;
    padding-bottom: 100px;
  }

  .footer-icon {
    display: inline;
    vertical-align: text-bottom;
    cursor: pointer;
    transition: color 0.5s ease;
  }

  /* ------------------------------------- */
  /* ðŸŒˆ RAINBOW ANIMATION STYLES ðŸŒˆ */
  /* ------------------------------------- */

  @keyframes rainbow-cycle {
    0% {
      color: var(--color-primary);
    }
    15% {
      color: #0000ff;
    }
    30% {
      color: #9400d3;
    }
    45% {
      color: #ff0000;
    }
    60% {
      color: #ff7f00;
    }
    75% {
      color: #ffff00;
    }
    85% {
      color: #00ff00;
    }
    100% {
      color: var(--color-primary);
    }
  }

  .footer-icon.rainbow {
    color: transparent;
    animation: rainbow-cycle 3s linear infinite;
  }
</style>
