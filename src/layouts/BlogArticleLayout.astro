---
import Layout from "./Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { Image } from "astro:assets";
import ogDefaultImage from "@/assets/og-default.png";
import formatToJSTDate from "@/utils/formatToJSTDate";
import { Icon } from "astro-icon/components";
import type { MarkdownHeading } from "astro";
import { getIcon } from "@/consts/categoryIcons";
import ShareButtons from "@/components/ShareButtons.astro";
import "@/styles/blogArticleStyle.css";

interface Props {
  frontmatter: any;
  headings: MarkdownHeading[];
  slug: string;
}

const { frontmatter, headings, slug } = Astro.props;
const { thumbnail } = frontmatter;

// Thumbnail generation

const images = import.meta.glob<{ default: ImageMetadata }>(
  `../content/blog/**/*.{jpeg,jpg,png,gif}`,
  { eager: true },
);
const articleImage =
  images[
    `../content/blog/${slug}/${thumbnail ? thumbnail.replace(/^\.\//, "") : null}`
  ]?.default ?? ogDefaultImage;

const articleDate = formatToJSTDate(frontmatter.date);
const lastUpdate = frontmatter.lastUpdate
  ? formatToJSTDate(frontmatter.lastUpdate)
  : null;

// TOC generation

const toc = headings.filter((h) => h.depth > 1 && h.depth < 4);
---

<Layout
  title={frontmatter.title}
  description={frontmatter.desc}
  type="article"
  ogpImage={articleImage}
>
  <Header />
  <div class="blog-hero">
    <Image src={articleImage} alt={frontmatter.alt || ""} loading="eager" />
    <p class="category">
      <Icon name={getIcon(frontmatter.category)} size="1.2em" />{
        frontmatter.category
      }
    </p>
    <h1>{frontmatter.title}</h1>
    <p class="desc">{frontmatter.desc}</p>
    <div class="date-container">
      <Icon name="mdi:calendar" size="1.1em" /><p class="date">{articleDate}</p>
      {
        lastUpdate && (
          <>
            <Icon name="mdi:update" size="1.1em" />
            <p class="date">{lastUpdate}</p>
          </>
        )
      }
    </div>
  </div>
  <div class="container">
    <slot />
  </div>
  <ShareButtons title={frontmatter.title} />
  <Footer />
</Layout>

<style>
  h1 {
    text-align: center;
    margin: 18px 40px 0 40px;
    word-break: auto-phrase;
    font-size: 36px;

    @media (max-width: 768px) {
      font-size: 24px;
      margin: 8px 20px 16px 20px;
    }
  }

  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    word-break: auto-phrase;
  }

  p.desc {
    color: var(--color-text-sub);
    margin: 1lh auto 0.6lh auto;
    max-width: 70%;

    @media (max-width: 600px) {
      max-width: 90%;
    }
  }

  .container {
    max-width: 768px;
    padding: 0 30px 80px;
    margin: 0 auto;

    p {
      max-width: 100vw;

      a:first-child {
        word-break: break-all;
      }

      code {
        word-break: break-all;
      }
    }

    blockquote {
      border-left: 4px solid var(--color-text-sub);
      margin: 1.5lh 0 1.5lh 0;
      padding: 16px 0 16px 24px;
      color: var(--color-text-sub);
      background-color: color-mix(
        in srgb,
        var(--color-card),
        var(--color-background) 70%
      );

      p {
        margin: 0;
      }
    }

    img {
      display: block;
      max-width: 100%;
      object-fit: contain;
      height: auto;
      margin: 1.5lh auto;
    }

    h2 {
      margin-top: 60px;
    }

    h3,
    h4,
    h5,
    h6 {
      margin-top: 40px;
    }

    p,
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      word-break: auto-phrase;
    }

    /* Container spacing in the blog flow */
    .remark-link-card-plus__container {
      margin: 1.5rem 0;
      width: 100%;
    }

    .remark-link-card-plus__card {
      display: grid;
      /* Fixed ratio: Text takes most space, image takes a square-ish portion */
      grid-template-columns: 1fr auto;
      background: var(--color-card);
      border: 2px solid var(--color-text-sub); /* Thinner borders usually look more modern */
      border-radius: 12px;
      overflow: hidden; /* Critical for keeping image corners rounded */
      text-decoration: none;
      transition:
        transform 0.2s ease,
        border-color 0.2s ease;
      min-height: 120px;
    }

    /* Hover effect for better UX */
    .remark-link-card-plus__card:hover {
      transform: translateY(-2px);
      border-color: var(--color-text);
      background: var(--color-card-hover, var(--color-card));
    }

    .remark-link-card-plus__main {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 16px;
      overflow: hidden; /* Prevents text from pushing the card wider */
    }

    .remark-link-card-plus__content {
      display: flex;
      flex-direction: column;
      gap: 4px;
    }

    .remark-link-card-plus__title {
      font-weight: bold;
      font-size: 1.1em;
      color: var(--color-text);
      /* Truncate long titles to 1 line */
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .remark-link-card-plus__description {
      color: var(--color-text-sub);
      font-size: 0.85em;
      line-height: 1.5;
      /* Truncate long descriptions to 2 lines */
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .remark-link-card-plus__meta {
      display: flex;
      align-items: center;
      gap: 8px;
      margin-top: 12px;
    }

    .remark-link-card-plus__favicon {
      margin: 0;
      border-radius: 2px;
    }

    .remark-link-card-plus__url {
      color: var(--color-text-sub);
      font-size: 0.75em;
      letter-spacing: 0.02em;
    }

    .remark-link-card-plus__thumbnail {
      max-height: 160px;
      min-width: 160px;
      width: auto;
      height: 100%;
      border-left: 2px solid var(--color-text-sub);
    }

    .remark-link-card-plus__image {
      width: 100%;
      min-width: 160px;
      max-width: 320px;
      height: 100%;
      min-height: 160px;
      margin: 0;
      /* This ensures the thumbnail fills the square without stretching */
      object-fit: cover;
      display: block;
    }

    /* Responsive adjustment for mobile */
    @media (max-width: 600px) {
      .remark-link-card-plus__card {
        grid-template-columns: 1fr auto;
        min-height: 100px;
      }

      .remark-link-card-plus__main {
        padding: 10px 16px;
      }

      .remark-link-card-plus__title {
        font-weight: bold;
        font-size: 0.9em;
        text-overflow: clip;
        white-space: unset;
        line-height: 1.4em;
        /* Truncate long descriptions to 2 lines */
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .remark-link-card-plus__description {
        display: none; /* Hide description on tiny screens to maintain card height */
      }

      .remark-link-card-plus__thumbnail {
        width: 100px;
        min-width: 100px;
        height: 100px;
        min-height: 100px;
        aspect-ratio: 1 / 1;
      }

      .remark-link-card-plus__image {
        width: 100px;
        min-width: 100px;
        height: 100px;
        min-height: 100px;
        aspect-ratio: 1 / 1;
      }
    }

    /* GFM-like Alerts */
    .markdown-alert {
      padding: 1.2rem 1rem;
      font-size: 0.9em;
      margin: 1.4lh 0;
    }

    /* Note */
    .markdown-alert-note {
      background-color: var(--color-note-bg);
    }

    /* Tip */
    .markdown-alert-tip {
      background-color: var(--color-tip-bg);
    }

    /* Important */
    .markdown-alert-important {
      background-color: var(--color-important-bg);
    }
    /* Warning */
    .markdown-alert-warning {
      background-color: var(--color-warning-bg);
    }

    /* Caution */
    .markdown-alert-caution {
      background-color: var(--color-caution-bg);
    }

    .expressive-code {
      margin-top: 1.2lh;
      margin-bottom: 1.8lh;
    }
  }

  .blog-hero {
    max-width: 1080px;
    margin: 0 auto 80px auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    img {
      max-width: 100%;
      object-fit: cover;
      aspect-ratio: 1280 / 720;
      height: auto;
    }

    .date {
      padding-right: 0.5em;
    }

    .date-container {
      font-size: 0.8em;
      color: var(--color-text-sub);
      padding: 0 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 4px;
      height: 1.2em;
      color: var(--color-text-sub);
    }

    .category {
      background-color: var(--color-text-sub);
      color: var(--color-background);
      display: inline-block;
      text-align: center;
      padding: 0 14px;
      margin: 32px 0 0 0;
      border-radius: 8px;
      font-size: 0.9em;
    }

    .category > * {
      vertical-align: text-bottom;
      padding-right: 5px;
    }
  }
</style>

<script is:inline define:vars={{ toc }}>
  const container = document.getElementById("article-toc-trigger");
  if (container && toc.length > 0) {
    const title = document.createElement("h2");
    title.innerText = "Table of Contents";

    const list = document.createElement("ul");
    toc.forEach((h) => {
      const li = document.createElement("li");
      li.style.marginLeft = `${(h.depth - 2) * 20}px`;
      const a = document.createElement("a");
      a.href = `#${h.slug}`;

      // --- Emoji Integration ---
      // Find the actual heading in the article using the slug
      const actualHeading = document.getElementById(h.slug);
      if (actualHeading) {
        // Clone content to remove any nested anchor links (#)
        const clone = actualHeading.cloneNode(true);
        clone.querySelectorAll("a, .anchor-link").forEach((el) => el.remove());
        // Set HTML to preserve the <img> tags from twemoji
        a.innerHTML = clone.innerHTML;
      } else {
        a.innerText = h.text; // Fallback to plain text
      }
      // -------------------------

      li.appendChild(a);
      list.appendChild(li);
    });

    container.appendChild(title);
    container.appendChild(list);
  }
</script>
