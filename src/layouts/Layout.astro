---
import { LOCALES, DEFAULT_LOCALE, type Lang } from "@/types/i18n";

import { LOCALES_SETTING } from "@/i18n/locales";
import { useTranslator } from "@/i18n/utils";

import defaultOgpImage from "@/assets/og-default.png";
import type { ImageMetadata } from "astro";

import OldGatsbyCacheKillSwitch from "@/components/OldGatsbyCacheKillSwitch.astro";

import "remark-github-alerts/styles/github-base.css";
import GoogleAnalytics from "@/components/GoogleAnalytics.astro";
import { SITE_TITLE } from "@/consts";

const lang = (Astro.currentLocale ||
  DEFAULT_LOCALE) as keyof typeof LOCALES_SETTING;
const t = useTranslator(lang);
const langFull = LOCALES_SETTING[lang]?.lang;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

interface Props {
  title?: string;
  description?: string;
  type?: "website" | "article" | "profile" | "book" | "music" | "video";
  ogpImage?: URL | ImageMetadata;
  disableTrailingWebsiteName?: Boolean;
}

const defaultOgpImageUrl = new URL(defaultOgpImage.src, Astro.site);
const siteName = t("site-name");
const {
  title = siteName,
  description = t("site-description"),
  type = "website",
  ogpImage = defaultOgpImageUrl,
  disableTrailingWebsiteName = false,
} = Astro.props;

const displayedTitle = !disableTrailingWebsiteName
  ? `${title} | ${siteName}`
  : title;

const displayedOgpImage =
  "src" in ogpImage ? new URL(ogpImage.src, Astro.site) : ogpImage;
---

<!doctype html>
<html lang={langFull}>
  <head>
    <meta charset="UTF-8" />
    <GoogleAnalytics />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />
    <title>{displayedTitle}</title>
    <meta name="description" slot="head" content={description} />
    <meta property="og:title" content={displayedTitle} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:type" content={type} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={displayedOgpImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={displayedTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={displayedOgpImage} />
    <meta property="og:locale" content={langFull?.replace("-", "_")} />
    <meta property="og:url" content={Astro.url} />
    <slot name="head" slot="head" />
    <script is:inline>
      const getThemePreference = () => {
        // 1. Check for saved preference in localStorage
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        // 2. Fallback to system preference
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        // 3. Default to 'light'
        return "light";
      };

      const theme = getThemePreference();

      // Apply the class before the browser renders the content
      if (theme === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
    <OldGatsbyCacheKillSwitch />
  </head>
  <body>
    <main id="main-content">
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    font-family: "Noto Sans JP Variable", sans-serif;
    src: url("/fonts/NotoSansJP-VariableFont_wght.woff2") format("woff2");
    font-display: swap;
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-background);
    color: var(--color-text);
    max-width: 100vw;
    overflow-x: hidden;
    line-height: 1.5em;
    transition:
      background-color 0.5s ease,
      color 0.5s ease;
  }

  :global(a) {
    color: var(--color-primary);
  }

  :global(h1, h2, h3, h4, h5, h6, p, li, a) {
    line-height: 1.6em;
  }

  :global(code) {
    background: color-mix(in srgb, var(--color-card), transparent 50%);
    padding: 2px 6px;
    border-radius: 4px;
    margin: 0 2px;
  }

  :root,
  .dark {
    transition:
      --color-text 0.3s ease,
      --color-text-sub 0.3s ease,
      --color-background 0.3s ease,
      --color-primary 0.3s ease,
      --color-surface 0.3s ease,
      --color-card 0.3s ease,
      --color-blogcard 0.3s ease;
  }

  /* Light theme */
  :root {
    --color-text: #1a1a1a;
    --color-text-sub: rgba(26, 26, 26, 0.75);
    --color-background: #ffffff;
    --color-primary: #0056b3;
    --color-surface: #f4f4f4;
    --color-card: #bebebe;
    --color-blogcard: #ebebeb;

    --color-note: #0969da;
    --color-note-bg: rgba(9, 105, 218, 0.1);
    --color-tip: #1a7f37;
    --color-tip-bg: rgba(26, 127, 55, 0.1);
    --color-important: #8250df;
    --color-important-bg: rgba(130, 80, 223, 0.1);
    --color-warning: #9a6700;
    --color-warning-bg: rgba(154, 103, 0, 0.1);
    --color-caution: #d1242f;
    --color-caution-bg: rgba(209, 36, 47, 0.1);
  }

  /* Dark theme */
  .dark {
    --color-text: #f0f0f0;
    --color-text-sub: rgba(240, 240, 240, 0.75);
    --color-background: #1a1a1a;
    --color-primary: #8ab4f8;
    --color-surface: #2c2c2c;
    --color-card: #696969;
    --color-blogcard: #3d3d3d;

    --color-note: #4493f8;
    --color-tip: #3fb950;
    --color-important: #a371f7;
    --color-warning: #d29922;
    --color-caution: #f85149;
  }
</style>

<style is:global>
  /* This will apply to EVERY .twemoji img on your site, 
     regardless of where it was generated */
  img[data-twemoji] {
    height: 1.2em !important;
    width: 1.2em !important;
    margin: 0 0.05em 0 0.1em !important;
    vertical-align: -0.2em !important;
    display: inline-block !important;
    border: none !important; /* Remove any default image borders */
    box-shadow: none !important;
    user-select: text !important;
  }
</style>
